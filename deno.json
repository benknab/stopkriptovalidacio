{
	"name": "kriptovalidacio",
	"exports": "./src/server.tsx",
	"nodeModulesDir": "auto",
	"tasks": {
		"setup": "cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
		"dev:css": "deno run -A npm:@tailwindcss/cli -i ./src/styles/input.css -o ./public/styles.css --watch",
		"dev:server": "deno run --allow-net --allow-read --allow-env --watch src/server.tsx",
		"dev": "deno run -A npm:concurrently \"deno task dev:css\" \"deno task dev:server\"",
		"build:css": "deno run -A npm:@tailwindcss/cli -i ./src/styles/input.css -o ./public/styles.css --minify",
		"build": "deno task build:css",
		"start": "deno run --allow-net --allow-read --allow-env src/server.tsx",
		"check": "deno check src/**/*.tsx src/**/*.ts",
		"fmt": "deno fmt",
		"lint": "deno lint"
	},
	"imports": {
		"@hono/hono": "jsr:@hono/hono@^4",
		"react": "npm:react@^19",
		"react/jsx-runtime": "npm:react@^19/jsx-runtime",
		"react-dom/server": "npm:react-dom@^19/server",
		"@types/react": "npm:@types/react@^19",
		"tailwindcss": "npm:tailwindcss@^4",
		"i18next": "npm:i18next@^24",
		"react-i18next": "npm:react-i18next@^15",
		"tailwind-merge": "npm:tailwind-merge@^2"
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"lib": ["deno.window", "dom", "dom.iterable"]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4
	},
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"include": [
				"ban-untagged-todo",
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"guard-for-in",
				"no-boolean-literal-for-arguments",
				"no-const-assign",
				"no-eval",
				"no-external-import",
				"no-implicit-declare-namespace-export",
				"no-non-null-asserted-optional-chain",
				"no-non-null-assertion",
				"no-self-compare",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn",
				"no-throw-literal",
				"no-top-level-await",
				"no-undef",
				"prefer-as-const",
				"single-var-declarator",
				"triple-slash-reference",
				"verbatim-module-syntax"
			]
		}
	}
}
